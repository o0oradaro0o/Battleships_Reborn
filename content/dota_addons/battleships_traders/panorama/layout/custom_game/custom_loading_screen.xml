<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/custom_load.js" />
	</scripts>
	<Panel class="BattleshipsLoadingRoot">

		<Panel id="seq">
			<Image id="seq_bg" class="SeqBg" src="file://{images}/custom_game/loading_screen/loading.png" />
		</Panel>

		<Panel id="TitlePanel">
			<Label id="BattleshipsTitle" text="#addon_game_name" style="" />
		</Panel>

		<Panel id="AuthorPanelHolder">
			<Panel id="AuthorPanel">
				<Label class="AuthorTitle" text="#Author_Title"/>
			</Panel>

			<Panel id="ArtistPanel">
				<Label class="heroTitle" text="#Artist_Panel"/>
			</Panel>
			<Panel id="HeroPanel">
				<Label class="heroTitle" text="#Hero_Title"/>
			</Panel>
		</Panel>
		<Panel id="CoOpHolder">
			<Panel id="CoOp">
				<Label class="AuthorTitle" text="#Coop_Title"/>
				<Label class="heroTitle" text="#Coop_Desc" />
			</Panel>
			<Panel id="battle">
				<Label class="AuthorTitle" text="#Battle_Title" />
				<Label class="heroTitle" text="#Battle_Desc" />
			</Panel>
		</Panel>


		<Panel id="NewsHolder">
			<Panel id="News">
				<Label class="AuthorTitle" text="#News_Title" />

				<Label class="newsTitle" text="#News_Content" />



			</Panel>
		</Panel>


		<Panel id="LearnHolder">
			<Label class="LearnTitle" text="#HowToPlay" />
			<Panel id="LearnInfoHolder">
				<Panel id="learn1" class="innerLearn">
					<Label id="ObjectiveHeader" class="Header" html="true" text="#bs_Objectives" />
					<Label id="HowToWin" class="TipText" html="true" text="#bs_HowToWin" />
					<Panel id="Bases" class="InfoRow">
						<Panel id="ShipDocks" class="DockPanel">
							<Image id="TopDock" class="Docks" src="file://{images}/custom_game/game_info/Doclocs.png" />
							<Image id="middock" class="Docks" src="file://{images}/custom_game/game_info/dock.png" />
						</Panel>
					</Panel>
				</Panel>
				<Panel id="learn2" class="innerLearn">
					<Label id="WeaponsHeader3" class="Header" html="true" text="#bs_Weapons_3" />
					<Panel id="WeaponsPanel3" class="InfoCol">
						<Label id="HowToWeapons3" class="TipText" html="true" text="#bs_HowToWeapons3" />
						<Image id="WeaponsChart3" src="file://{images}/custom_game/game_info/weapon_loc.png"/>
					</Panel>
				</Panel>
				<Panel id="learn3" class="innerLearn">
					<Label id="WeaponsHeader" class="Header" html="true" text="#bs_Weapons" />
					<Panel id="WeaponsPanel" class="InfoRow">
						<Image id="WeaponsChart" src="file://{images}/custom_game/game_info/weapon_layout.png"/>
						<Label id="HowToWeapons" class="TipText" html="true" text="#bs_HowToWeapons" />
					</Panel>
				</Panel>
				<Panel id="learn4" class="innerLearn">
					<Label id="WeaponsHeader2" class="Header" html="true" text="#bs_Weapons_2" />
					<Panel id="WeaponsPanel2" class="InfoCol">
						<Image id="WeaponsChart2" src="file://{images}/custom_game/game_info/upgrade_layout.png"/>
						<Label id="HowToWeapons2" class="TipText" html="true" text="#bs_HowToWeapons2" />
					</Panel>
				</Panel>
				
				<Panel id="learn5" class="innerLearn">
					<Label id="ShipsHeader" class="Header" html="true" text="#bs_Ships" />
					<Panel id="ShipsPanel" class="InfoRow">
						<Label id="HowToShips" class="TipText" html="true" text="#bs_HowToShips" />
						<Image id="ShipsChart" src="file://{images}/custom_game/game_info/ships.png" />
					</Panel>
				</Panel>
				<Panel id="learn6" class="innerLearn">
					<Label id="upheader" class="Header" html="true" text="#bs_upgrade" />
					<Panel id="upgradePanel" class="InfoCol">
					<Image id="UpgradeChart" src="file://{images}/custom_game/game_info/upgrades.png"/>
						<Label id="HowToUpgrade" class="TipText" html="true" text="#bs_HowToUpgrade" />
						
					</Panel>
				</Panel>
				<Panel id="learn7" class="innerLearn">
					<Label id="tideheader" class="Header" html="true" text="#bs_Tide" />
					<Panel id="TidePanel2" class="InfoCol">
						<Label id="HowToTide" class="TipText" html="true" text="#bs_HowToTide" />
						<Image id="TideChart" src="file://{images}/custom_game/game_info/tide.png"/>
					</Panel>
				</Panel>
				<Panel id="learn8" class="innerLearn">
					<Label id="ShipsHeader" class="Header" html="true" text="#bs_Towers" />
					<Panel id="ShipsPanel" class="InfoRow">
						<Image id="TowersChart" src="file://{images}/custom_game/game_info/Towers.png" />
						<Label id="HowToTowers" class="TipText" html="true" text="#bs_HowToTowers" />
					</Panel>
				</Panel>
				<Panel id="learn9" class="innerLearn">
					<Label id="combatheader" class="Header" html="true" text="#bs_Combat" />
					<Panel id="CombatPanel" class="InfoRow">
						<Label id="HowToCombat" class="TipText" html="true" text="#bs_HowToCombat" />
						<Image id="CombatChart" src="file://{images}/custom_game/game_info/Combat1.png"/>
					</Panel>
				</Panel>

				<Panel id="learn10" class="innerLearn">
					<Label id="combatheader2" class="Header" html="true" text="#bs_Combat2" />
					<Panel id="CombatPanel2" class="InfoCol">
						<Label id="HowToCombat2" class="TipText" html="true" text="#bs_HowToCombat2" />
						<Image id="CombatChart2" src="file://{images}/custom_game/game_info/Combat2.png"/>
					</Panel>
				</Panel>
				<Panel id="learn11" class="innerLearn">
					<Label id="upheader" class="Header" html="true" text="#bs_Zoom" />
					<Panel id="ZoomPanel" class="InfoCol">
						<Image id="ZoomChart" src="file://{images}/custom_game/game_info/Zoom.png"/>
						<Label id="HowToZoom" class="TipText" html="true" text="#bs_HowToZoom" />
					</Panel>
				</Panel>
				<Panel id="learn12" class="innerLearn">
					<Label id="upheader" class="Header" html="true" text="#bs_Empire" />
					<Panel id="EmpirePanel" class="InfoCol">
						<Label id="HowToEmpire" class="TipText" html="true" text="#bs_HowToEmpire" />
						<Image id="EmpireChart" src="file://{images}/custom_game/game_info/Empire.png"/>
					</Panel>
				</Panel>
			</Panel>

			<Panel id="LearnButtonHolder">
				<Panel id="b1" class="learn_button" onactivate="prev()">
					<Label hittest="false" class="shop_btn_text" text="#prev"/>
				</Panel>

				<Label hittest="false" id="pageCountLabel" text="1/12"/>

				<Panel id="b3" class="learn_button" onactivate="next()">
					<Label hittest="false" class="shop_btn_text" text="#next"/>
				</Panel>
			</Panel>

		</Panel>
	</Panel>

</root>

