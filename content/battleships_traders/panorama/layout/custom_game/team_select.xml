<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/play.vcss_c" />
		<include src="file://{resources}/styles/custom_game/team_select.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/team_select.js" />
	</scripts>
	<Panel hittest="false" class="TeamSelect">
		<Panel hittest="false" id="TeamSelectContainer" selectionpos="auto">
			<!--Empty space to let the loading screen and chat be visible-->
			<Panel hittest="false" id="TeamsSelectEmptySpace" />
			<!--Teams List, left hand panel-->
			
			<Panel id="HatListholder">
			<Label id = "PointTracker" text="My Pts:" />
			<Panel id="HatList">
				<Label class="HatRankHeader" html="true" text="Captain Hats (750 pts)" />
				<Panel class="Divider" />
				<Panel class="HatRow">
					<Button id="cap1" class="HatSelectButton locked" onactivate="PickHat(750,'cap1')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						<Image class="HatImage" src="file://{images}/custom_game/hats/cap1.png" />
						<Label class="HatImageLabel" text="Undead" />
					</Button>
					<Button id="cap2" class="HatSelectButton locked" onactivate="PickHat(750,'cap2')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/cap2.png" />
						<Label class="HatImageLabel" text="Fish Head" />
					</Button>
					<Button id="cap3" class="HatSelectButton locked" onactivate="PickHat(750,'cap3')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/cap3.png" />
						<Label class="HatImageLabel" text="Flashy" />
					</Button>
					<Button class="HatSelectButton" onactivate="RandHat(680,'cap')">
						<Image class="RandImage" src="file://{images}/custom_game/hats/rand.png" />
						<Label class="RandImageLabel" text="Random" />
						<Label class="RandImageLabel" text="(680pts)" />
					</Button>
				</Panel>
				<Label class="HatRankHeader" html="true" text="First Mate Hats (500 pts)" />
				<Panel class="Divider" />
				<Panel class="HatRow">
					<Button id="first1" class="HatSelectButton locked" onactivate="PickHat(500,'first1')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						<Image class="HatImage" src="file://{images}/custom_game/hats/first1.png" />
						<Label class="HatImageLabel" text="Standard" />
					</Button>
					<Button id="first2" class="HatSelectButton locked" onactivate="PickHat(500,'first2')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/first2.png" />
						<Label class="HatImageLabel" text="Skull" />
					</Button>
					<Button id="first3" class="HatSelectButton locked" onactivate="PickHat(500,'first3')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/first3.png" />
						<Label class="HatImageLabel" text="Bright" />
					</Button>
					<Button class="HatSelectButton" onactivate="RandHat(450,'first')">
						<Image class="RandImage" src="file://{images}/custom_game/hats/rand.png" />
						<Label class="RandImageLabel" text="Random" />
						<Label class="RandImageLabel" text="(450pts)" />
					</Button>
				</Panel>
				<Label class="HatRankHeader" html="true" text="Gunner Hats (250 pts)" />
				<Panel class="Divider" />
				<Panel class="HatRow">
					<Button id="gun1" class="HatSelectButton locked" onactivate="PickHat(250,'gun1')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						<Image class="HatImage" src="file://{images}/custom_game/hats/gun1.png" />
						<Label class="HatImageLabel" text="Standard" />
					</Button>
					<Button id="gun2" class="HatSelectButton locked" onactivate="PickHat(250,'gun2')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/gun2.png" />
						<Label class="HatImageLabel" text="Skull" />
					</Button>
					<Button id="gun3" class="HatSelectButton locked" onactivate="PickHat(250,'gun3')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/gun3.png" />
						<Label class="HatImageLabel" text="Bright" />
					</Button>
					<Button class="HatSelectButton" onactivate="RandHat(220,'gun')">
						<Image class="RandImage" src="file://{images}/custom_game/hats/rand.png" />
						<Label class="RandImageLabel" text="Random" />
						<Label class="RandImageLabel" text="(220pts)" />
					</Button>
				</Panel>
				<Label class="HatRankHeader" html="true" text="Boatswain Hats (100 pts)" />
				<Panel class="Divider" />
				<Panel class="HatRow">
					<Button id="swine3" class="HatSelectButton locked" onactivate="PickHat(100,'swine3')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/swine3.png" />
						<Label class="HatImageLabel" text="Standard" />
					</Button>
					<Button id="swine1" class="HatSelectButton locked" onactivate="PickHat(100,'swine1')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/swine1.png" />
						<Label class="HatImageLabel" text="Skull" />
					</Button>
					<Button id="swine2" class="HatSelectButton locked" onactivate="PickHat(100,'swine2')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/swine2.png" />
						<Label class="HatImageLabel" text="Bright" />
					</Button>
					<Button class="HatSelectButton" onactivate="RandHat(85,'swine')">
						<Image class="RandImage" src="file://{images}/custom_game/hats/rand.png" />
						<Label class="RandImageLabel" text="Random" />
						<Label class="RandImageLabel" text="(85pts)" />
					</Button>
				</Panel>
				<Label class="HatRankHeader" html="true" text="DeckHand Hats (50 pts)" />
				<Panel class="Divider" />
				<Panel class="HatRow">
					<Button id="deck3" class="HatSelectButton locked" onactivate="PickHat(50,'deck3')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/deck3.png" />
						<Label class="HatImageLabel" text="Standard" />
					</Button>
					<Button id="deck2" class="HatSelectButton locked" onactivate="PickHat(50,'deck2')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/deck2.png" />
						<Label class="HatImageLabel" text="Skull" />
					</Button>
					<Button id="deck1" class="HatSelectButton locked" onactivate="PickHat(50,'deck1')">
						<Image class="ButtonLocked" src="file://{images}/custom_game/hats/lock.png" />
						
						<Image class="HatImage" src="file://{images}/custom_game/hats/deck1.png" />
						<Label class="HatImageLabel" text="Bright" />
					</Button>
					<Button class="HatSelectButton" onactivate="RandHat(40,'deck')">
						<Image class="RandImage" src="file://{images}/custom_game/hats/rand.png" />
						<Label class="RandImageLabel" text="Random" />
						<Label class="RandImageLabel" text="(40pts)" />
					</Button>
				</Panel>
				
				<Panel class="HatRowbot">
				<Button id="specHat" class="HatSelectButton" onactivate="PickHat(0,'specHat')">
					<Label class="HatImageLabel" text="You have a" />
					<Image class="HatImage" src="file://{images}/custom_game/hats/specHat.png" />
					<Label class="HatImageLabel" text="Special Hat" />
				</Button>
				<Button id="noHat" class="HatSelectButton" onactivate="PickHat(0,'noHat')">
					
					<Image class="HatImage" src="file://{images}/custom_game/hats/noHat.png" />
					<Label class="HatImageLabel" text="No hat" />
				</Button>
				
				</Panel>
			</Panel>
			</Panel>
			<Panel id="TeamsList">
				<Panel id="TeamsListGroup">
					<Panel id="TeamListHeader">
						<Label id="TeamListHeaderLabel" text="#custom_game_team_select" />
						<Image id="TeamListLockedIcon" src="s2r://panorama/images/control_icons/lock_small.png" />
					</Panel>
					<Panel id="TeamsListRoot" />
					<Panel id="OptionList">
						<Panel id="OptionListGroup">
							<Label id="OptionTitle" text="#Options_title" />
							<Panel id="OptionDivider" />
							<Panel id="StartGameCountdownTimer">
								<Image id="TimerBg" src="s2r://panorama/images/status_icons/timer_background.psd" />
								<Image id="TimerRing" src="s2r://panorama/images/status_icons/timer_ring.psd" />
								<Label id="TeamSelectTimer" text="#custom_game_team_select_timer" />
								<Panel id="TimerLabelBox">
									<Label id="TimerLabelAutoStart" text="#custom_game_team_select_auto_start" />
									<Label id="TimerLabelGameStart" text="#custom_game_team_select_starting" />
								</Panel>
							</Panel>
							<Panel id="OptionDivider2" />
							<Button id="AutoAssignButton" onactivate="OnAutoAssignPressed()">
								<Image src="s2r://panorama/images/control_icons/double_arrow_left.png" />
								<Label text="#custom_game_team_select_auto_assign" />
							</Button>
							<Button id="ShuffleTeamAssignmentButton" onactivate="OnShufflePlayersPressed()">
								<Label text="BALANCE MMR" />
								<Image src="s2r://panorama/images/control_icons/shuffle.psd" />
							</Button>
							<Panel id="MMRContainer">
								<Label text="Avg MMR" />
								<Label id="MMRDifference" text="???" />
							</Panel>
							<Panel id="Options">
								<Button id="battleButton" class="untoggled" onactivate="BattleMode()" onmouseover="UIShowTextTooltip(#Battle_Desc)" onmouseout="UIHideTextTooltip()">
									<Label id="battleLabel" text="GAME MODE: NORMAL" />
								</Button>
								<Button id="tradeButton" class="tradetoggled" onactivate="TradeMode()" onmouseover="UIShowTextTooltip(#Trade_Desc)" onmouseout="UIHideTextTooltip()">
									<Label id="TradeLabel" text="TRADING: DISABLED" />
								</Button>
								<Button id="coOpButton" class="untoggled" onactivate="OnCoOpButtonPressed()" onmouseover="UIShowTextTooltip(#Coop_Desc)" onmouseout="UIHideTextTooltip()">
									<Label id="coOpLabel" text="Toggle Co-Op" />
								</Button>
							</Panel>
						</Panel>
					</Panel>
					<Panel id="HatSelection">
						<Panel class="HatRow">
							<Button id="HatButton" class="untoggled" onactivate="ShowHats()">
								<Label id="HatHeader" html="true" text="View Hat collection!" />
							</Button>
							<Image id="CurrentHat" src="file://{images}/custom_game/hats/noHat.png" />
						</Panel>
						<Label id="CurrentHatText" html="true" text="current hat:" />
					</Panel>
				</Panel>
			</Panel>
			<!--Game Info and Unassigned players, right hand panel-->
			<Panel id="GameAndPlayersRoot">
				<Panel id="GameInfoPanel">
					<!--Game mode and map-->
					<Panel id="CustomGameModeName">
						<Label id="GameModeNameLabel" text="#addon_game_name" />
					</Panel>
					<Panel id="MapInfo">
						<Label id="MapInfoLabel" text="#LoadingScreenMapInfo" />
					</Panel>
				</Panel>
				<!--Unassigned players-->
				<Panel id="UnassignedPlayerPanel">
					<Button id="UnassignedPlayersButton" onactivate="OnLeaveTeamPressed()">
						<Panel id="UnassignedPlayersHeader">
							<Label text="#custom_game_team_select_unassigned_players" />
						</Panel>
						<Panel id="UnassignedPlayersDivider" />
						<Panel id="UnassignedPlayersContainer" />
					</Button>
				</Panel>
				<Button id="LockAndStartButton" class="PlayButton" onactivate="OnLockAndStartPressed()">
					<Label text="#custom_game_team_select_lock_start" />
				</Button>
				<Button id="CancelAndUnlockButton" class="PlayButton" onactivate="OnCancelAndUnlockPressed()">
					<Label text="#custom_game_team_select_cancel_unlock" />
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>